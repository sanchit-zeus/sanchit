public class ThreadDemo2 {

	public static void main(String[] args) {
		
		Runnable obj2 =()-> {
				for (int i = 0; i < 5; i++) {
					System.out.println("Hello!");
					try {Thread.sleep(500);}catch(Exception e) {}
				}
			};
		
		Thread t1 = new Thread(()-> {
			for (int i = 0; i < 5; i++) {
				System.out.println("Hi!");
				try {
					Thread.sleep(500);
					}
				catch(Exception e) {}
			}
		});
		Thread t2 = new Thread(obj2);

		t1.start();
		try {
			Thread.sleep(10);
			}
		catch(Exception e) {}
		t2.start();
	}
}
